<h2>YOUR TASKS</h2>
<% i = 1 %>
<ul>
  <% @tasks.each do |task| %>

  <li>
    <% if  task[:completion_date] != nil %>
    <%= link_to "#{i}. #{task[:name]}: #{task[:description]}", task_path(task.id), class: "complete" %>
    <% else %>
    <%= link_to "#{i}. #{task[:name]}: #{task[:description]}", task_path(task.id) %>
    <% end %>
  </li>

  <% if  task[:completion_date] != nil %>
  <p> <%= link_to "Unmark Complete", mark_complete_task_path(task.id), method: :patch %>
  <% else %>
  <p> <%= link_to "Mark Complete", mark_complete_task_path(task.id), method: :patch %>
  <% end %>

     | <%= link_to "Edit", edit_task_path(task.id) %> | <%= link_to "Delete", task_path(task.id), method: :delete, data: { confirm: "Please confirm that you want to delete this task." } %></p>

  <% i += 1 %>
  <% end %>
</ul>
