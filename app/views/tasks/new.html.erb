<%= form_with model: @task, class: "task-form" do |f| %>
  <p>Please provide the following information to create a new task:</p>
  <%= f.label :name, "Name: " %>
  <%= f.text_field :name %>

  <%= f.label :description, "Description: " %>
  <%= f.text_field :description %>

  <%= f.submit "Add Task" %>
<% end %>
